<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.manager.ManagerFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleEnabled="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@mipmap/project_background"
                    android:scaleType="centerCrop"/>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:subtitleTextColor="#000000"
                    app:titleTextColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ProjectCard"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="140dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp"
            android:background="@color/ef_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/projects_list"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="24dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="井盖故障上报"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/work_sans_bold"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="井盖编号"
                    android:layout_marginHorizontal="14dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:hintAnimationEnabled="true"
                    app:startIconDrawable="@drawable/nature"
                    app:endIconMode="clear_text"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/item_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#ffffff"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="井盖位置"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    app:hintAnimationEnabled="true"
                    app:startIconDrawable="@drawable/pin_drop"
                    app:endIconMode="clear_text"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/item_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#ffffff"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="备注内容"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:hintAnimationEnabled="true"
                    app:startIconDrawable="@drawable/wysiwyg"
                    app:endIconMode="clear_text"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/item_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#ffffff"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginVertical="14dp"
                    android:layout_marginHorizontal="14dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/work_sans_medium"
                        android:text="环境图片"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outlinebox"
                        >
                        <ImageView
                            android:id="@+id/reportImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/photo_camera"
                            />
                    </FrameLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/order_del_btn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:enabled="true"
                    android:text="提交"
                    android:textColor="#673AB7"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    app:rippleColor="#FF6B54A1"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>